@model StudentGrievancePortal.Models.Grievance

@{
    ViewData["Title"] = "Submit Grievance";
}

<style>
    :root {
        --bvicam-blue: #0b3c6f;
        --bg-body: #f4f7fb;
    }

    .create-card {
        border: none;
        border-radius: 24px;
        background: white;
        overflow: hidden;
    }

    .header-gradient {
        background: linear-gradient(135deg, #0b3c6f 0%, #1f6fb2 100%);
        padding: 40px;
        text-align: center;
        color: white;
    }

    .header-circle {
        width: 60px;
        height: 60px;
        background: rgba(255, 255, 255, 0.2);
        border-radius: 50%;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 15px;
        backdrop-filter: blur(5px);
    }

    .form-section {
        padding: 40px;
    }

    .form-label {
        font-size: 0.8rem;
        text-transform: uppercase;
        letter-spacing: 1px;
        color: #64748b;
        margin-bottom: 8px;
    }

    .modern-input {
        border-radius: 12px !important;
        border: 1.5px solid #e2e8f0;
        padding: 12px 15px;
        transition: all 0.3s ease;
        background-color: #f8fafc;
    }

        .modern-input:focus {
            background-color: white;
            border-color: var(--bvicam-blue);
            box-shadow: 0 0 0 4px rgba(11, 60, 111, 0.1);
        }

    .priority-display {
        font-weight: 700;
        cursor: not-allowed;
    }

    .btn-submit {
        border-radius: 30px;
        padding: 12px 30px;
        font-weight: 700;
        letter-spacing: 0.5px;
        transition: 0.3s;
    }

    .btn-back {
        border-radius: 30px;
        padding: 12px 25px;
        color: #64748b;
        text-decoration: none;
        font-weight: 600;
        display: inline-flex;
        align-items: center;
    }

        .btn-back:hover {
            background: #f1f5f9;
            color: #1e293b;
        }
</style>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">

            <div class="create-card shadow-lg">

                <div class="header-gradient">
                    <div class="header-circle">
                        <i class="bi bi-pencil-square fs-3"></i>
                    </div>

                    <div>
                        <h2 class="fw-bold mb-1">New Grievance</h2>
                        <p class="opacity-75 mb-0">
                            Please fill in the details below. We're here to help.
                        </p>
                    </div>
                </div>

                <div class="form-section">
                    <form asp-action="Create">
                        <div class="row g-4">

                            <div class="col-md-6">
                                <label class="form-label fw-bold">
                                    <i class="bi bi-building me-1"></i> Target Department
                                </label>
                                <select asp-for="AssignedDeptId"
                                        id="AssignedDeptId"
                                        class="form-select modern-input"
                                        asp-items="ViewBag.Departments"
                                        required>
                                    <option value="">Choose department...</option>
                                </select>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-bold">
                                    <i class="bi bi-flag me-1"></i> Priority (Auto-Assigned)
                                </label>

                                <div class="d-flex align-items-center gap-2">
                                    <input asp-for="Priority"
                                           id="priorityDisplay"
                                           type="text"
                                           class="form-control modern-input priority-display"
                                           value="Low"
                                           readonly />

                                    <div id="prioritySpinner"
                                         class="spinner-border spinner-border-sm text-primary d-none"
                                         role="status">
                                        <span class="visually-hidden">Loading...</span>
                                    </div>
                                </div>
                            </div>

                            <div class="col-12">
                                <label class="form-label fw-bold">
                                    <i class="bi bi-type-h1 me-1"></i> Subject
                                </label>
                                <input asp-for="Subject"
                                       id="Subject"
                                       class="form-control modern-input"
                                       placeholder="Enter a concise title..."
                                       required />
                            </div>

                            <div class="col-12">
                                <label class="form-label fw-bold">
                                    <i class="bi bi-text-paragraph me-1"></i> Detailed Description
                                </label>
                                <textarea asp-for="Description"
                                          id="Description"
                                          class="form-control modern-input"
                                          rows="6"
                                          placeholder="Explain the issue in detail..."
                                          required></textarea>
                            </div>

                            <div class="col-12 mt-5">
                                <div class="d-flex justify-content-between align-items-center">
                                    <a asp-action="Index" class="btn-back">
                                        <i class="bi bi-arrow-left me-2"></i> Discard & Return
                                    </a>

                                    <button type="submit" class="btn btn-primary btn-submit shadow">
                                        Submit Grievance <i class="bi bi-send ms-1"></i>
                                    </button>
                                </div>
                            </div>

                        </div>
                    </form>
                </div>
            </div>

            <div class="text-center mt-4">
                <p class="text-muted small">
                    <i class="bi bi-info-circle me-1"></i>
                    Your grievance will be assigned a unique <strong>Ticket ID</strong> upon submission.
                </p>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <script>
        const subjectEl = document.getElementById('Subject');
        const descriptionEl = document.getElementById('Description');
        const deptEl = document.getElementById('AssignedDeptId');
        const priorityDisplay = document.getElementById('priorityDisplay');
        const prioritySpinner = document.getElementById('prioritySpinner');

        const priorityColors = {
            'High': '#dc3545',
            'Medium': '#FFC107',
            'Low': '#007bff'
        };

        function updatePriorityDisplay(priority) {
            priorityDisplay.value = priority;
            priorityDisplay.style.color = priorityColors[priority] || '#6c757d';
            prioritySpinner.classList.add('d-none');
        }

        function debounce(fn, delay) {
            let timeoutId;
            return (...args) => {
                clearTimeout(timeoutId);
                timeoutId = setTimeout(() => fn(...args), delay);
            };
        }

        async function fetchSuggestion() {
            const subject = subjectEl?.value || '';
            const description = descriptionEl?.value || '';
            const deptId = deptEl?.value || null;

            if (!subject && !description) return;

            prioritySpinner.classList.remove('d-none');

            try {
                const response = await fetch('@Url.Action("SuggestPriority", "Student")', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        subject: subject,
                        description: description,
                        assignedDeptId: deptId ? Number(deptId) : null
                    })
                });

                if (!response.ok) {
                    prioritySpinner.classList.add('d-none');
                    return;
                }

                const data = await response.json();
                if (data && data.priority) {
                    updatePriorityDisplay(data.priority);
                }
            }
            catch (error) {
                console.error(error);
                prioritySpinner.classList.add('d-none');
            }
        }

        const debouncedFetch = debounce(fetchSuggestion, 500);

        subjectEl?.addEventListener('input', debouncedFetch);
        descriptionEl?.addEventListener('input', debouncedFetch);
        deptEl?.addEventListener('change', debouncedFetch);

        window.addEventListener('load', () => {
            setTimeout(fetchSuggestion, 200);
        });
    </script>
}